---
import { Image } from "astro:assets";
import microscopeDoctor from "~src/assets/images/microscope-doctor.jpg";
import microscope from "~src/assets/images/microscope.jpg";
import gallery1 from "~src/assets/images/gallery-1.jpg";
import gallery2 from "~src/assets/images/gallery-2.jpg";
import gallery3 from "~src/assets/images/gallery-3.jpg";

import Section from "~src/components/Section.astro";
import LinkButton from "~src/components/LinkButton.astro";
import GlassFrame from "~src/components/GlassFrame.astro";
import Layout from "~src/layouts/Layout.astro";
import SectionCard from "~src/components/SectionCard.astro";
import AlgorithmCard from "~src/components/AlgorithmCard.astro";
---

<Layout title="Hematoscope App">
	<Section variant="gradient-cells" class="hero">
		<div class="text">
			<h1>Revolutionizing Diagnostics with Advanced AI Solutions</h1>
			<p>
				Hematoscope. Empowering Physicians and Researchers with
				Cutting-Edge Morphometric Algorithms.
			</p>
		</div>
		<GlassFrame>
			<video
				autoplay
				loop
				aria-label="Demonstration of Hematoscope App's features"
			>
				<source src="banner.webm" type="video/webm" />
			</video>
		</GlassFrame>
	</Section>

	<Section variant="pair">
		<Image
			src={microscopeDoctor}
			alt="Doctor looking at a bone marrow sample through a microscope."
			widths={[240, 540, 720, 1200]}
			height="300"
		/>
		<SectionCard>
			<h2>Repeatable results. Automated analysis.</h2>
			<p>
				Automate the tedious analysis, saving time and enabling the
				practitioners to focus their skills to the tasks that really
				matter.
			</p>
			<LinkButton href="/" variant="default-arrow">Read more</LinkButton>
		</SectionCard>
	</Section>

	<Section variant="blank" class="gallery">
		<div class="text">
			<h2>Intuitive tools</h2>
			<p>
				Cell classification, statistics, slide viewer, hype text that
				looks good to doctors and significant people who might want to
				buy this app for hospitals.
			</p>
		</div>

		<ol class="scroller">
			<GlassFrame tag="li" class="scroller-img">
				<Image src={gallery1} alt="" />
			</GlassFrame>
			<GlassFrame tag="li" class="scroller-img">
				<Image src={gallery2} alt="" />
			</GlassFrame>
			<GlassFrame tag="li" class="scroller-img">
				<Image src={gallery3} alt="" />
			</GlassFrame>
		</ol>
	</Section>

	<Section variant="gradient">
		<div class="text">
			<h2>Comprehensive Algorithms</h2>
			<p>
				Employing the latest technologies in computer vision and deep
				learning, Hematoscope delivers results fast, accurately and
				objectively.
			</p>
		</div>
		<ul class="algorithms">
			<AlgorithmCard
				description="Distinct algorithms for analysis:"
				highlight="11"
				icon="neuralnet"
				accent="1"
				linkHref="/"
			/>
			<AlgorithmCard
				description="Average accuracy for the algorithms:"
				highlight="93.4%"
				icon="accuracy"
				accent="2"
				linkHref="/"
			/>
			<AlgorithmCard
				description="Peer-reviewed publications"
				highlight="7"
				icon="research"
				accent="3"
				linkHref="/"
			/>
		</ul>
	</Section>

	<Section variant="pair">
		<SectionCard accent="2">
			<h2>Compatible with West Medica scanners</h2>
			<p>
				Whole-Slide Imaging with 10x - 100x magnification performed
				automatically. Analyze up to 1000 samples per day, with each
				sample analyzed within 5 minutes of the scan.
			</p>
			<LinkButton href="/" variant="default-arrow">Read more</LinkButton>
		</SectionCard>
		<Image
			src={microscope}
			alt="Close-up of a microscope scanning a pathological slide."
			widths={[240, 540, 720, 1200]}
			height="300"
		/>
	</Section>

	<Section variant="blank" class="call-to-action">
		<div class="text">
			<h2>See for yourself</h2>
			<p>
				Try the demo to get a feel for the application, or contact us
				and we can discuss how to best integrate it into your systems.
			</p>
		</div>
		<div class="buttons">
			<LinkButton href="/" variant="highlight">Try the demo</LinkButton>
			<LinkButton href="/">Contact us</LinkButton>
		</div>
	</Section>
</Layout>

<style>
	p {
		font-size: var(--text-size-ingress);
	}

	.hero {
		padding-block: calc(2 * var(--element-padding));
	}
	.text {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}
	.text > p {
		max-width: 45ch;
	}

	.gallery {
		grid-column: full !important;
		padding: unset;
		padding-block-start: var(--element-padding);
	}
	.gallery > div {
		padding-inline: var(--element-padding);
	}
	.scroller {
		display: flex;
		gap: calc(3 * var(--element-padding));
		padding-inline: calc(5 * var(--element-padding));
		padding-block-end: calc(2 * var(--element-padding));
		list-style: none;

		overflow: scroll;
		scrollbar-color: transparent transparent; /* thumb and track color */
		scrollbar-width: 0px;
		scroll-behavior: smooth;
		scroll-snap-type: x mandatory;
	}
	.scroller-img {
		min-width: 80%;
		scroll-snap-align: center;
		animation: scroll 10s linear infinite;
		animation-timing-function: ease-in-out;
	}
	.scroller-img img {
		height: 100%;
		width: 100%;
	}
	.scroller:hover .scroller-img {
		animation-play-state: paused;
	}
	@media (prefers-reduced-motion), (pointer: coarse) {
		.scroller-img {
			animation: none;
		}
	}
	@keyframes scroll {
		0%,
		10%,
		90%,
		100% {
			transform: translateX(0);
		}
		20%,
		45% {
			transform: translateX(-95%);
		}
		55%,
		80% {
			transform: translateX(-190%);
		}
	}

	.algorithms {
		display: flex;
		gap: calc(2 * var(--element-padding));
		flex-wrap: wrap;
		justify-content: center;
	}

	.call-to-action {
		padding-block: calc(2 * var(--element-padding));
		gap: var(--element-padding);
	}
	.buttons {
		display: flex;
		gap: var(--element-padding);
		flex-wrap: wrap;
		justify-content: center;
	}
</style>
